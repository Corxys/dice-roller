<%- include('partials/header.ejs') %>

<!-- BODY -->

<body>
  <div class="body__content">
    <!-- navbar -->
    <nav class="nav">
      <div class="nav__logo">
        <a class="nav__link" href="/">
          <img class="nav__img" src="/images/logo_w.svg">
        </a>
      </div>

      <!-- history (trigger) -->
      <div class="nav__history">
        <div class="history__stats">
          <div class="stats__title">DERNIER LANCER</div>
          <i></i>
          <div class="stats__roll">
            <div class="stats__roll__text">Dés joués :
              <span class="stats__roll__last stats__roll__text--green">0</span>
            </div>
            <div class="stats__roll__text">Total :
              <span class="stats__roll__total stats__roll__text--green">0</span>
            </div>
          </div>
          <i></i>
        </div>
      </div>
    </nav>

    <!-- container -->
    <div class="container">

      <!-- field -->
      <div class="container__field">
        <div class="container__dice"></div>
        <div class="container__total">
          <div class="total__text">TOTAL</div>
          <div class="total__number">0</div>
        </div>
        <div class="container__instructions">Pour lancer les dés, appuyez sur la touche espace </br> ou cliquez
          n'importe où sur le fond.</div>
      </div>
    </div>

    <!-- footer -->
    <footer class="footer">
      <div class="footer__block-left">
        <div class="block-left__settings">
          <div class="settings__dice">
            <div class="dice__img">
              <img src="/images/die.png" alt="icon of die">
            </div>
            <div class="dice__name">D6</div>
            <i></i>
            <form class="dice__controller">
              <input class="controller controller__minus" type="submit" value="-">
              <div class="controller__counter">1</div>
              <input class="controller controller__plus" type="submit" value="+">
            </form>
          </div>
        </div>
        <button class="block-left__reset">RESET</button>
      </div>
      <div class="footer__block-right">
        <div class="block-right__copyright">
          <a href="http://jennblngr.com" target="_blank">JENNY-LEE BOULANGER</a> © 2020
        </div>
        <div class="block-right__socials">
          <a href="https://twitter.com/blngrjnn">
            <img class="socials__ico" src="/images/ico_twitter.svg">
          </a>
        </div>
      </div>
    </footer>

    <!-- scripts -->
    <script src="javascripts/script.js"></script>
</body>

<%- include('partials/footer.ejs') %>